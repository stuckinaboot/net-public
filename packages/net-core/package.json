{
  "name": "@net-protocol/core",
  "version": "0.1.5",
  "description": "Core Net protocol SDK for interacting with Net smart contracts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "yarn build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:record": "POLLY_RECORD=true vitest run"
  },
  "dependencies": {
    "viem": "^2.31.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@vitest/ui": "^1.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "wagmi": "^2.15.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "wagmi": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stuckinaboot/net-public.git",
    "directory": "packages/net-core"
  },
  "keywords": [
    "net",
    "protocol",
    "blockchain",
    "ethereum",
    "messaging"
  ],
  "license": "MIT"
}
